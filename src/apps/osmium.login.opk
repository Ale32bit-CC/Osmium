local obj = {}\
local function del()\
    gui.deleteTimer(obj.timer)\
    gui.deleteItem(obj.label)\
end\
\
if not db.get(\"safety\",\"mode\") then --setup\
    local w,h = term.getSize()\
    gui.addFilledBox(1,1,w,3,colors.blue)\
