    \"Login\",\
    \"Welcome back!\",\
    \"Login > \"\
}\
local setup = {\
    \"Setup\",\
    \"Welcome to Osmium!\",\
    \"Continue > \",\
}\
\
local pwid\
local username\
local mode\
local pw\
local rpw\
\
